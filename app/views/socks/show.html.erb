<div class="container">
  <div class="big-card-show justify-content-around py-5">
    <div class="card-purple">
      <div class="card-body">
        <%= cl_image_tag @sock.photo, height: 300, width: 400, crop: :fill %>
        <h2 class="card-title"><%= @sock.title %></h2>
        <h6 class="card-subtitle mb-2"><%= @sock.dirtyness %></h6>
        <p class="card-text"><%= @sock.description %></p>
        <p class="card-text">Size: <%= @sock.size %></p>
        <p class="card-text">Price: <%= @sock.price %> â‚¬/day</p>
        <p class="card-text"> Owner: Andre Lavilliers</p>
        <ul class="reviews-list">
        <% @sock.reviews.each do |review| %>
          <li class="list-group-item list-reviews">
            <% review.rating.times do %>
              <i class="fas fa-socks" style="color:turquoise"></i>
              <% end %>: <%= review.content %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="mt-3 row justify-content-center">
      <div class="col-4">
      </div>
      <div class="card-purple form">
        <div class="card-body-form">
          <h5 class="card-title">Book these Socks</h5>
          <h6 class="card-subtitle mb-2">Add your dates</h6>
          <%= simple_form_for([@sock, @booking]) do |f| %>
            <%= f.input :start_at %>
            <%= f.input :end_at %>
            <%= f.button :submit, "I WANT THESE!", class:"btn justify-content-cente"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container d-flex justify-content-between px-5 pb-3">
    <% if policy(@sock).edit? %>
  <div><%= link_to "UPDATE", edit_sock_path(@sock), class: "btn" %></div>
    <% end %>
    <% if policy(@sock).destroy? %>
  <div><%= link_to "DESTROY", sock_path(@sock), method: :delete, class: "btn" %></div>
  </div>
    <% end %>
  <div><%= link_to "BACK TO SOCKS LIST", socks_path, class: "btn" %></div>
