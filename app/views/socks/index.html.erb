
<div class="container">
<div class="cards-grid">
  <% @socks.each do |sock| %>
  <div class="card-trip">
    <img src="<%= cl_image_path sock.photo %>">
    <div class="card-trip-infos">
      <div>
        <h1><%= sock.title %></h1>
        <ul class="reviews-list">
        <% sock.reviews.each do |review| %>
          <li class="list-group-item list-reviews">
            Rating<% review.rating.times do %>
              <i class="fas fa-socks" style="color:#54BC83"></i>
              <% end %></li>
        <% end %>
      </ul>
      </div>
      <h2 class="card-trip-pricing"><%= sock.price %>â‚¬ / day</h2>
      <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
    </div>
    <%= link_to "", sock_path(sock), class: "card-link" %>
  </div>
    <% end %>
</div>
</div>


